<html>
<head>
    <title>More Of Us</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="/javascripts/jquery-3.3.1.min.js"></script>
    <link rel="stylesheet" type="text/css" href="/stylesheets/jTinder.css">
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link href="https://fonts.googleapis.com/css?family=Roboto+Slab" rel="stylesheet">
    <!-- jQuery lib -->
    <script type="text/javascript" src="/javascripts/jquery.min.js"></script>
    <!-- transform2d lib -->
    <script type="text/javascript" src="/javascripts/jquery.transform2d.js"></script>
    <!-- jTinder lib -->
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
</head>
<body>

        <div class="holder container">

                <div class="card" style="margin-bottom: 15px;">

                    <div class="cardContainer">
                        <a class="searchAction" href="/activity/view/<%=activityType.name%>/<%=activity._id%>"><button class="searchAction">Back To Activity</button></a>
                    </div>
                    <div style="text-align:center">
                        <h3>Please select an attribute to search by<h3>
                    </div>
                </div>
                <% for(let i = 0; i < activityType.attribute_names.length; i++){ %>
                <div class="card" style="margin-top:0px">

                <div class="cardContainer">
                    <a class="attributeFilters" id="<%= i %>" href="/search/search/<%=activity._id%>"><button class="searchAction"><%= activityType.attribute_names[i] %></button></a>
                </div>
                <% } %>
            </div>
        </div>
</body>
</html>
<style>

    .slider-wrap {
        padding-left: 0px;
        padding-right: 0px;
        height: 500px;
    }
    .slider {
        width: 1000px;
        height: 500px;
        overflow-x: hidden;
        overflow-y: hidden;
        margin-right: auto;
        margin-left: auto;
    }
    .holder {
        width: 100%;
        height: 100%;
    }
    .slide {
        float: left;
        width: 1000px;
        height: 650px;
        position: relative;
        background-position: -100px 0;
/*         margin-top: 2%;
 */    }

    div {
        padding: 0px;
    }

    body{
        margin: 0px;
        background-color: #2ECC71;
    }

    .apex-lft {
        float:left;
        margin-left: 10px;
        width:0px;
        height:0px;
        border-top:12px solid transparent;
        border-bottom:12px solid transparent;
        border-right:12px solid #000;
        border-right-color: rgb(0, 0, 0);
    }
    .apex-right {
        float:right;
        margin-right: 10px;
        width:0px;
        height:0px;
        border-top:12px solid transparent;
        border-bottom:12px solid transparent;
        border-left:12px solid #000;
        border-left-color: rgb(0, 0, 0);
    }

    .slide:before {
        background: linear-gradient(transparent, ghostwhite);
    }

</style>

<script>

$(document).ready(function(){

    $('.attributeFilters').each(function(){
        let href = $(this).attr('href');
        let id = $(this).attr('id');
        let idArray = [];
        idArray.push(id);
        idArray = encodeURIComponent(JSON.stringify(idArray));
        let newHref = href + "?attrSelection=" + idArray;
        $(this).attr('href', newHref);
        console.log(newHref);
        console.log(this);
    })

});

</script>